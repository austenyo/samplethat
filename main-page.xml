<page class="page"
      loaded="pageLoaded"
      xmlns:Card="nativescript-cardview"
      xmlns:FAB="nativescript-floatingactionbutton"
      xmlns:PullRefresh="nativescript-pulltorefresh"
      xmlns:nsDrawer="nativescript-pro-ui/sidedrawer"
      xmlns:myDrawer="shared/my-drawer"
      xmlns="http://www.nativescript.org/tns.xsd">


    <ActionBar class="action-bar">
        <!--
        Use the NavigationButton as a side-drawer button in Android because ActionItems are shown on the right side of the ActionBar
        -->
       <!-- <ActionItem ios.visibility="collapsed" text="OPEN" tap="onDrawerButtonTap"></ActionItem>-->
        <!--
        Use the ActionItem for IOS with position set to left. Using the NavigationButton as a side-drawer button in iOS is not possible, because its function is to always navigate back in the application.
        -->
        <ActionItem text="OPEN"
                    android.visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="left"
                    android.position="left">
        </ActionItem>
        <ActionItem class="" text="New" color="white" tap="{{ insert }}" ios.position="right" android.position="right">
        </ActionItem>

  <StackLayout orientation="horizontal"
    ios:horizontalAlignment="center"
    android:horizontalAlignment="center">
    <Image src="res://icon" class="action-bar-title"></Image>
  </StackLayout>
</ActionBar>
        <!-- <Label android.icon="res://icon" android.iconVisibility="always" class="action-bar-title"></Label> -->
 <StackLayout rows="auto,*">
            
         <ListView items="{{ lists }}" itemTap="navigateToTasks">
            <ListView.itemTemplate>
                    <Card:CardView class="cardStyle"  backgroundColor="{{ setRandomColor }}" margin="10" elevation="40" radius="5">
                        <Label id="files" class="files" text="{{ list_name }}"/>
                    </Card:CardView>
                </ListView.itemTemplate>
            </ListView>
